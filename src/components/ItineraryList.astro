    return (<div> {itinerary.id} -- {itinerary.data.title} -- 
    {itinerary.data.badge.map((b) => <span class="badge">{b}, </span>)} </div>);
})} -->

<ul class="itinerary-grid" id={gridId}>
  {items.map(({ itinerary, country }, i) => {
    const itTags = (itinerary.data.badge ?? []);
    const countryTag = `${country.data.title}`; // slug
    const tags = [...itTags, countryTag].join(",");


    return (
      <li class="itinerary-card" data-tags={tags}>
        <a href={`/itinerary/${itinerary.id}/`}>
          <Image
            width={720}
            height={360}
            src={itinerary.data.mainImage ?? placeholder}
            alt=""
            loading={i < eagerCount ? "eager" : "lazy"}
            fetchpriority={i < eagerCount ? "high" : "auto"}
          />
          <div class="card-header">
            <h3 class="title">{itinerary.data.title}</h3>
            <span class="country-badge">{country.data.title}</span>
          </div>
        </a>
      </li>
    );
  })}
</ul>

<style>
    ul {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    ul li {
        width: calc(32% - 1rem);
    }
    ul li * {
        text-decoration: none;
        transition: 0.2s ease;
    }
    ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
    }
    ul li a {
        display: block;
    }
    .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
    }
    .date {
        margin: 0;
        color: rgb(var(--gray));
    }
    ul li a:hover h3,
    ul li a:hover .date {
        color: rgb(var(--accent));
    }
    ul a:hover img {
        box-shadow: var(--box-shadow);
    }
    .card-header {
        display: flex;
        align-items: center;
        gap: 0.5em;
        margin-top: 0.2em;
    }
    .title {
        margin: 0;
        line-height: 1.1;
        font-weight: 600;
    }
    .country-badge {
        margin-left: auto;
        font-size: 0.9rem;
        padding: 0.15em 0.55em;
        border-radius: 999px;
        background: #eef6ff;
        color: #2b5dab;
        white-space: nowrap;
    }
    @media (max-width: 720px) {
        ul {
            gap: 0.5em;
        }
        ul li {
            width: 100%;
            text-align: center;
        }
        .card-header {
            flex-wrap: wrap;
        }
    }
</style>