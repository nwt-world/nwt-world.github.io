---
import SocialLinks from './SocialLinks.astro';

const today = new Date();
---

<footer class="site-footer">
	<div class="footer-inner">
		<p class="copyright">
			© {today.getFullYear()} Natural Wonders Travel
		</p>

		<div class="footer-links">
			<a href="mailto:mystery.maynor@gmail.com" class="contact-link">
				Contact
			</a>
		</div>
		<SocialLinks />
	</div>
</footer>

<style>
.site-footer {
	margin-top: 1rem;
	padding: 0.75rem 1rem;
	background-color: #f4f6fb;
	border-top: 1px solid #e0e4f2;
	color: #444;
	font-size: 0.9rem;
}

.footer-inner {
	max-width: 100%;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: center; /* ← key change */
	gap: 1.25rem;
	flex-wrap: wrap;
}

.footer-links {
	display: flex;
	align-items: center;
	gap: 1rem;
}

/* Optional visual separator */
.footer-inner > *:not(:last-child)::after {
	content: "·";
	margin-left: 1rem;
	color: #999;
}

/* Contact link */
.contact-link {
	color: #444;
	text-decoration: none;
}

.contact-link:hover {
	text-decoration: underline;
}
.footer-links .icon {
	opacity: 0.7;
}

.footer-links a:hover .icon {
	opacity: 1;
}

/* Mobile */
@media (max-width: 600px) {
	.footer-inner {
		flex-direction: column;
		gap: 0.5rem;
		text-align: center;
	}

	.footer-inner > *::after {
		content: "";
	}

	.footer-links {
		justify-content: center;
	}
}

</style>
