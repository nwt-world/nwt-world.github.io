---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import YouTube from '../components/YouTube.astro';
import LanguageBasedContent from "../components/LanguageBasedContent.svelte";
import { getItinerariesByCountry } from '../lib/itinerary';
import placeholder_en from '../assets/placeholder/country_en.png';
import placeholder_es from '../assets/placeholder/country_es.png';
import placeholder_ru from '../assets/placeholder/country_ru.png';

type Props = CollectionEntry<'country'>['data'];

const {
	title,
	tagline,
	mainImage,
	name,
	videoId, badge, region } = Astro.props;

const itineraries_en = await getItinerariesByCountry(name, "en")
const itineraries_es = await getItinerariesByCountry(name, "es")
const itineraries_ru = await getItinerariesByCountry(name, "ru")

---

<html lang="en">
	<head>
		<BaseHead title={title} description={tagline} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}

			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.tagline {
				max-width: 720px;
				margin: 0.5em auto;
				padding: 0em;
				color: rgb(var(--gray-dark));
				text-align: right;
				font-style: italic;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			    .itineraries {
				margin-top: 2em;
			}

			.itinerary-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
				gap: 1em;
			}
			.itinerary-card {
				display: flex;
				flex-direction: column;
				border-radius: 10px;
				overflow: hidden;
				border: 1px solid #ddd;
				text-decoration: none;
				color: inherit;
				content-visibility: auto;
			}

			.card-image {
				width: 100%;
				height: 160px;
				object-fit: cover;
			}

			.card-title {
				font-size: 1rem;
				text-align: center;
			}

			.card-content {
				padding: 0.4rem 1rem;
				font-size: 0.9rem;
				opacity: 0.9;
			}

			.itinerary-card:hover {
				background: #f9f9f9;
				transform: translateY(-2px);
			}
			
			.meta-row {
				max-width: 720px;
				margin: 0.4em auto 1.1em auto;
				padding: 0;
				display: flex;
				flex-wrap: wrap;
				justify-content: flex-end; /* match tagline alignment */
				gap: 0.35rem;
			}

			/* shared badge style */
			.badge {
				font-size: 0.85rem;
				padding: 0.15em 0.55em;
				border-radius: 999px;
				background: #eef6ff;
				color: #2b5dab;
				white-space: nowrap;
			}

			/* region should look more "meta" than travel tags */
			.badge-region {
				background: #f3f4f6;
				color: rgb(var(--gray-dark));
				border: 1px solid #e6e6e6;
			}

			@media (max-width: 720px) {
				.meta-row {
					justify-content: flex-start;
					overflow-x: auto;
					flex-wrap: wrap;            /* single row */
					-webkit-overflow-scrolling: touch;
					padding: 0.25rem 0.25rem;
					gap: 0.35rem;
					scrollbar-width: none;        /* Firefox */
				}
				.meta-row::-webkit-scrollbar {
					display: none;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<h1>{title}</h1>
				<div class="tagline">{tagline}</div>

				<div class="meta-row" aria-label="Tags">
					{badge.length > 0 && (
					<div class="badges">
						{badge.map((b) => (
						<span class="badge">{b}</span>
						))}
					</div>
					)}
				</div>

				<LanguageBasedContent client:load lang="en">
					<div class="hero-image" slot="en">
						<Image width={1020} height={510} src={mainImage ?? placeholder_en} loading="eager" alt="" />
					</div>
					<div class="hero-image" slot="es">
						<Image width={1020} height={510} src={mainImage ?? placeholder_es} loading="eager" alt="" />
					</div>
					<div class="hero-image" slot="ru">
						<Image width={1020} height={510} src={mainImage ?? placeholder_ru} loading="eager" alt="" />
					</div>
				</LanguageBasedContent>

				{videoId &&
					<h2 style="text-align: center;">
						<LanguageBasedContent client:load lang="en">
							<div slot="en">Video from the country</div>
							<div slot="es">Video del país</div>
							<div slot="ru">Видео о стране</div>
						</LanguageBasedContent>

						</h2>
					<YouTube id={videoId} />
				}

				<section class="context">
					<slot />
				</section>

				<LanguageBasedContent client:load lang="en">
					<div slot="en">
						{itineraries_en.length > 0 && (
							<section class="itineraries">
								<h2 id="itinerary">Itineraries</h2>
								<div class="itinerary-grid">
								{itineraries_en.map((it) => (
									<a class="itinerary-card" href={`/itinerary/${it.id}`}>
										<Image
											src={it.data.mainImage}
											width={360}
											height={240}
											alt={it.data.title}
											loading="lazy"
											class="card-image"
										/>
										<h3 class="card-title">{it.data.title}</h3>
										<div class="card-content">{it.data.tagline}</div>
									</a>
								))}
								</div>

							</section>
						)}
					</div>
					<div slot="es">
						{itineraries_es.length > 0 && (
							<section class="itineraries">
								<h2 id="itinerary">Itinerarios</h2>
								<div class="itinerary-grid">
								{itineraries_es.map((it) => (
									<a class="itinerary-card" href={`/itinerary/${it.id}`}>
										<Image
											src={it.data.mainImage}
											width={360}
											height={240}
											alt={it.data.title}
											loading="lazy"
											class="card-image"
										/>
										<h3 class="card-title">{it.data.title}</h3>
										<div class="card-content">{it.data.tagline}</div>
									</a>
								))}
								</div>

							</section>
						)}
					</div>
					<div slot="ru">
						{itineraries_ru.length > 0 && (
							<section class="itineraries">
								<h2 id="itinerary">Маршруты</h2>
								<div class="itinerary-grid">
								{itineraries_ru.map((it) => (
									<a class="itinerary-card" href={`/itinerary/${it.id}`}>
										<Image
											src={it.data.mainImage}
											width={360}
											height={240}
											alt={it.data.title}
											loading="lazy"
											class="card-image"
										/>
										<h3 class="card-title">{it.data.title}</h3>
										<div class="card-content">{it.data.tagline}</div>
									</a>
								))}
								</div>

							</section>
						)}
					</div>
				</LanguageBasedContent>


			</article>
		</main>
		<Footer />
	</body>
</html>
