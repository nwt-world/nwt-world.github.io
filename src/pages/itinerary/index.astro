---
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import LanguageBasedContent from "../../components/LanguageBasedContent.svelte";
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { getItinerariesWithCountry } from '../../lib/itinerary';
import ItineraryFilter from '../../components/ItineraryFilter.svelte';
import ItineraryList from '../../components/ItineraryList.astro';

const itineraries_en = await getItinerariesWithCountry("en")
const itineraries_es = await getItinerariesWithCountry("es")
const itineraries_ru = await getItinerariesWithCountry("ru")

function tagsForItineraries(items) {
  const counts = new Map<string, number>();
  for (const { itinerary } of items) {
    for (const t of (itinerary.data.badge ?? [])) {
      counts.set(t, (counts.get(t) ?? 0) + 1);
    }
  }
  return Array.from(counts.entries())
    .sort((a, b) => (b[1] - a[1]) || a[0].localeCompare(b[0]))
    .map(([t]) => t);
}

function tagsForItinerariesWithCountries(
  items,
  minItinerariesPerCountry: number,
  opts?: { useCountryTitle?: boolean; countryPrefix?: string }
) {
  // 1) count itineraries per country
  const countryCounts = new Map<string, number>();
  for (const { country } of items) {
    const key = country.data.title;
    countryCounts.set(key, (countryCounts.get(key) ?? 0) + 1);
  }

  // 2) decide which country tags are eligible
  const eligibleCountries = new Set<string>();
  for (const [k, n] of countryCounts.entries()) {
    if (n >= minItinerariesPerCountry) eligibleCountries.add(k);
  }

  // 3) count tags overall (itinerary tags + eligible country tags)
  const tagCounts = new Map<string, number>();

  for (const { itinerary, country } of items) {
    // itinerary tags
    for (const t of (itinerary.data.badge ?? [])) {
      tagCounts.set(t, (tagCounts.get(t) ?? 0) + 1);
    }

    // eligible country tag
    const ck = country.data.title;
    if (eligibleCountries.has(ck)) {
      const countryTag = `${ck}`;
      tagCounts.set(countryTag, (tagCounts.get(countryTag) ?? 0) + 1);
    }
  }

  // 4) sort by frequency desc, then alpha
  const tags = Array.from(tagCounts.entries())
    .sort((a, b) => (b[1] - a[1]) || a[0].localeCompare(b[0]))
    .map(([t]) => t);

  return { tags, tagCounts, eligibleCountries };
}

const MIN_ITINERARIES_FOR_COUNTRY_TAG = 2;

const { tags: tags_en } = tagsForItinerariesWithCountries(
  itineraries_en,
  MIN_ITINERARIES_FOR_COUNTRY_TAG
);
const { tags: tags_es } = tagsForItinerariesWithCountries(
  itineraries_es,
  MIN_ITINERARIES_FOR_COUNTRY_TAG
);
const { tags: tags_ru } = tagsForItinerariesWithCountries(
  itineraries_ru,
  MIN_ITINERARIES_FOR_COUNTRY_TAG
);

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
			}
			ul {
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(32% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h3,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.card-header {
				display: flex;
				align-items: center;
				gap: 0.5em;
				margin-top: 0.2em;
			}
			.title {
				margin: 0;
				line-height: 1.1;
				font-weight: 600;
			}
			.country-badge {
				margin-left: auto;
				font-size: 0.9rem;
				padding: 0.15em 0.55em;
				border-radius: 999px;
				background: #eef6ff;
				color: #2b5dab;
				white-space: nowrap;
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				.card-header {
					flex-wrap: wrap;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<LanguageBasedContent client:load lang="en">
					<div slot="en">
						<ItineraryFilter client:load allBadges={tags_en} totalCount={itineraries_en.length} lang='en'/>
						<ItineraryList items={itineraries_en} />
					</div>
					<div slot="es">
						<ItineraryFilter client:load allBadges={tags_es} totalCount={itineraries_es.length} lang='es'/>
						<ItineraryList items={itineraries_es} />
					</div>
					<div slot="ru">
						<ItineraryFilter client:load allBadges={tags_ru} totalCount={itineraries_ru.length} lang='en'/>
						<ItineraryList items={itineraries_ru} />
					</div>
				</LanguageBasedContent>
			</section>
		</main>
		<Footer />
	</body>
</html>
